<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="600" d:DesignHeight="400"
             x:Class="rush00.App.Views.HabitFinishView">

	<StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
		<TextBlock>Congratulations!</TextBlock>
		<TextBlock Text="{Binding ResultString}"/>
		<TextBlock Text="{Binding Motivation}"/>
		<Grid HorizontalAlignment="Center" Margin="50">
			<Button Content="Start a new habit" Command="{Binding CreateNew}" IsDefault="True"/>
		</Grid>
	</StackPanel>

</UserControl>
